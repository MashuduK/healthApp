                    <input type="hidden" asp-for="PatientInfoID" name="patientInfoID" />
                    <button type="submit" value="Create" class="details-button">Save</button>
                id="liveAlertBtn"
                </form>*@
                @*<a asp-action="Details2" asp-controller="PatientInfos" asp-route-id="@Model?.PatientInfoID" class="btn border-bottom">Advance</a>*@
            </div>
             
        </form>
    </div>
   
</body>
</html>

