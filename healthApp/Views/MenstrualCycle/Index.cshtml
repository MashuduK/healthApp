@model IEnumerable<healthApp.Models.FamilyPlanning.MenstrualCycle>

<h2>Menstrual Cycle Index</h2>

<p>
    <a asp-action="AddMenstrualCycle">Add Menstrual Cycle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <!-- Add additional columns as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cycle in Model)
        {
            <tr>
                <td>@cycle.StartDate.ToShortDateString()</td>
                <td>@cycle.EndDate.ToShortDateString()</td>
                <!-- Add additional columns as needed -->
                <td>
                    <a asp-action="Edit" asp-route-id="@cycle.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@cycle.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@cycle.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
