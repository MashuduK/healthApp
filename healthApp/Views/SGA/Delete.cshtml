@model healthApp.Models.Nutrition.SGA

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #e1e1e1;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h3 {
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .form-group dd {
            margin-bottom: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .link-back {
            display: block;
            text-align: center;
            margin-top: 20px;
        }
    
    </style>
</head>
<body>

    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <h4>SGA</h4>
        <hr />
        <dl class="row">
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                <dt class="col-sm-2">
                    @Html.DisplayName(property.PropertyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.Display(property.PropertyName)
                </dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SgaID" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <span> | </span>
                <a asp-action="Index">Back</a>
            </div>
        </form>
    </div>

</body>
</html>
