@model healthApp.Models.FamilyPlanning.ContraceptionGuideRecord

@{
    ViewData["Title"] = "Create Contraception Guide Record";
}

<h1>Create Contraception Guide Record</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ContraceptionType" class="control-label"></label>
        <input asp-for="ContraceptionType" class="form-control" />
        <span asp-validation-for="ContraceptionType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Effectiveness" class="control-label"></label>
        <input asp-for="Effectiveness" class="form-control" />
        <span asp-validation-for="Effectiveness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SideEffects" class="control-label"></label>
        <input asp-for="SideEffects" class="form-control" />
        <span asp-validation-for="SideEffects" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
